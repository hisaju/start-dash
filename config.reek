"app":
  Attribute:
    enabled: false
  DuplicateMethodCall:
    max_calls: 2
  IrresponsibleModule:
    enabled: false
  NestedIterators:
    max_allowed_nesting: 2
  NilCheck:
    enabled: false
  PrimaDonnaMethod:
    enabled: false
  TooManyStatements:
    max_statements: 30
  UnusedParameters:
    enabled: false
  UtilityFunction:
    public_methods_only: true

exclude_paths:
  - vendor
  - db
  - bin
  - spec
